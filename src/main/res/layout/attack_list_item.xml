<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="match_parent"
	android:layout_height="wrap_content" android:paddingLeft="5dp"
	android:paddingRight="5dp">
	<com.thomasgallinari.dnd4android.view.widget.StyledTextView
		style="@style/DnDListViewItemTextView" android:id="@+id/attack_list_item_name_text_view"
		android:layout_gravity="center_vertical" android:layout_height="wrap_content"
		android:layout_width="0dp" android:layout_weight="1" android:textSize="18sp"
		android:ellipsize="marquee" android:maxLines="2"
		android:layout_marginRight="5dp" />
	<LinearLayout android:orientation="vertical"
		android:gravity="center" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:paddingLeft="5dp"
		android:paddingRight="5dp">
		<com.thomasgallinari.dnd4android.view.widget.StyledTextView
			style="@style/DnDListViewItemTextView" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:text="@string/attack" />
		<com.thomasgallinari.dnd4android.view.widget.StyledButton
			android:layout_height="wrap_content" android:layout_width="50sp"
			android:gravity="center" android:id="@+id/attack_list_item_attack_button"
			android:focusable="false" android:focusableInTouchMode="false" />
	</LinearLayout>
	<LinearLayout android:orientation="vertical"
		android:gravity="center" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:paddingLeft="5dp"
		android:paddingRight="5dp">
		<com.thomasgallinari.dnd4android.view.widget.StyledTextView
			style="@style/DnDListViewItemTextView" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:text="@string/attack_damage" />
		<com.thomasgallinari.dnd4android.view.widget.StyledButton
			android:layout_height="wrap_content" android:layout_width="50sp"
			android:gravity="center" android:id="@+id/attack_list_item_damage_button"
			android:focusable="false" android:focusableInTouchMode="false" />
	</LinearLayout>
</LinearLayout>

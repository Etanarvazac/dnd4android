<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="center_horizontal" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:orientation="vertical">
	<FrameLayout style="@style/DnDActionBar"
		android:layout_width="match_parent" android:layout_height="wrap_content">
		<com.thomasgallinari.dndcharactersheet.view.widget.StyledTitleTextView
			style="@style/DnDActionBarTextView" android:text="@string/attack"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:gravity="center_vertical" />
	</FrameLayout>
	<LinearLayout style="@style/DnDContent"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:orientation="vertical">
		<TableLayout android:layout_gravity="center_horizontal"
			android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TableRow>
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledTextView
					android:gravity="center" android:text="@string/attack_base"
					android:layout_column="0" android:layout_width="50sp" />
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledTextView
					android:gravity="center" android:text="@string/attack_abil"
					android:layout_column="2" android:layout_width="50sp" />
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledTextView
					android:gravity="center" android:text="@string/attack_class"
					android:layout_column="4" android:layout_width="50sp" />
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledTextView
					android:gravity="center" android:text="@string/attack_prof"
					android:layout_column="6" android:layout_width="50sp" />
			</TableRow>
			<TableRow>
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledTextView
					android:id="@+id/attack_attack_base_text_view"
					android:layout_height="40sp" android:gravity="center" />
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledTextView
					android:gravity="center" android:layout_marginLeft="10sp"
					android:layout_marginRight="10sp" android:text="@string/global_plus" />
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledEditText
					android:id="@+id/attack_attack_abil_edit_text"
					android:layout_width="50sp" android:gravity="center"
					android:inputType="numberSigned" android:maxLength="3"
					android:selectAllOnFocus="true" />
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledTextView
					android:gravity="center" android:layout_marginLeft="10sp"
					android:layout_marginRight="10sp" android:text="@string/global_plus" />
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledEditText
					android:id="@+id/attack_attack_class_edit_text"
					android:layout_width="50sp" android:gravity="center"
					android:inputType="numberSigned" android:maxLength="3"
					android:selectAllOnFocus="true" />
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledTextView
					android:gravity="center" android:layout_marginLeft="10sp"
					android:layout_marginRight="10sp" android:text="@string/global_plus" />
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledEditText
					android:id="@+id/attack_attack_prof_edit_text"
					android:layout_width="50sp" android:gravity="center"
					android:inputType="numberSigned" android:maxLength="3"
					android:selectAllOnFocus="true" />
			</TableRow>
			<TableRow>
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledTextView
					android:gravity="center" android:text="@string/attack_feat"
					android:layout_column="2" android:layout_width="50sp" />
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledTextView
					android:gravity="center" android:text="@string/attack_enh"
					android:layout_column="4" />
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledTextView
					android:gravity="center" android:text="@string/attack_misc"
					android:layout_column="6" />
			</TableRow>
			<TableRow>
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledTextView
					android:gravity="center" android:layout_marginLeft="10sp"
					android:layout_marginRight="10sp" android:text="@string/global_plus"
					android:layout_column="1" />
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledEditText
					android:id="@+id/attack_attack_feat_edit_text"
					android:layout_width="50sp" android:gravity="center"
					android:inputType="numberSigned" android:maxLength="3"
					android:selectAllOnFocus="true" android:layout_column="2" />
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledTextView
					android:gravity="center" android:layout_marginLeft="10sp"
					android:layout_marginRight="10sp" android:text="@string/global_plus"
					android:layout_column="3" />
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledEditText
					android:id="@+id/attack_attack_enh_edit_text" android:layout_width="50sp"
					android:gravity="center" android:inputType="numberSigned"
					android:maxLength="3" android:selectAllOnFocus="true"
					android:layout_column="4" />
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledTextView
					android:gravity="center" android:layout_marginLeft="10sp"
					android:layout_marginRight="10sp" android:text="@string/global_plus"
					android:layout_column="5" />
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledEditText
					android:id="@+id/attack_attack_misc_edit_text"
					android:layout_width="50sp" android:gravity="center"
					android:inputType="numberSigned" android:maxLength="3"
					android:selectAllOnFocus="true" android:layout_column="6" />
			</TableRow>
			<TableRow>
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledTextView
					android:text="@string/attack" android:gravity="center"
					android:layout_column="2" />
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledTextView
					android:gravity="center" android:layout_marginLeft="10sp"
					android:layout_marginRight="10sp" android:text="@string/global_equals"
					android:layout_column="3" />
				<com.thomasgallinari.dndcharactersheet.view.widget.StyledTextView
					android:id="@+id/attack_attack_total_score_text_view"
					android:gravity="center" android:layout_height="40sp"
					android:layout_column="4" />
			</TableRow>
		</TableLayout>
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center"
			android:orientation="horizontal">
			<com.thomasgallinari.dndcharactersheet.view.widget.StyledButton
				android:id="@+id/attack_attack_ok_button" android:layout_width="100sp"
				android:layout_height="wrap_content" android:text="@string/global_ok" />
			<com.thomasgallinari.dndcharactersheet.view.widget.StyledButton
				android:id="@+id/attack_attack_cancel_button" android:layout_width="100sp"
				android:layout_height="wrap_content" android:text="@string/global_cancel" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>

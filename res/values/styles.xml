<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="DnDActionBar">
		<item name="android:background">@drawable/dnd_action_bar_background</item>
		<item name="android:padding">10dp</item>
	</style>

	<style name="DnDActionBarTextView">
		<item name="android:textColor">@color/dnd_red</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="DnDButton" parent="@android:style/Widget.Button">
		<item name="android:background">@drawable/dnd_button_background</item>
		<item name="android:textColor">@color/dnd_button_text_color</item>
	</style>

	<style name="DnDContent">
		<item name="android:background">@drawable/dnd_content_background</item>
	</style>

	<style name="DnDGallery" parent="@android:style/Widget.Gallery">
		<item name="android:background">@drawable/dnd_tab_bar_background</item>
	</style>

	<style name="DnDImageButton" parent="@android:style/Widget.ImageButton">
		<item name="android:background">@android:color/transparent</item>
	</style>

	<style name="DnDListView" parent="@android:style/Widget.ListView">
		<item name="android:cacheColorHint">#00000000</item>
		<item name="android:divider">@null</item>
		<item name="android:dividerHeight">10dp</item>
		<item name="android:listSelector">@drawable/dnd_list_selector</item>
	</style>

	<style name="DnDListViewItemTextView">
		<item name="android:textColor">@color/dnd_list_item_text_color</item>
	</style>

	<style name="DnDProgressBar" parent="@android:style/Widget.ProgressBar.Small" />

</resources>
